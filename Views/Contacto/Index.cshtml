@model test2.Models.Contacto;

@{
    ViewData["Title"] = "Contacto";
}


<div class="text-center">
    <h1 class="display-4">Contactanos</h1>

    <form asp-controller="Contacto" asp-action="Create" class="contacto">
        <div>
            <label asp-for="Name" ></label>
            <input asp-for="Name"  type="text" placeholder="Ingresa tu nombre"/>
        </div>

        <div>
            <label asp-for="Email" ></label>
            <input asp-for="Email"  type="text" placeholder="Ingresa tu email"/>
        </div>

        <div>
            <label asp-for="Subject" ></label>
            <input asp-for="Subject"  type="text" placeholder="Ingresa el titulo"/>
        </div>

        <div>
            <label asp-for="Comment" ></label>
            <textarea asp-for="Comment"  rows='6'></textarea>
        </div>
 

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>

    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Volver</a>
    </div>
</div>